{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "src/types"],
    "exclude": ["node_modules"]
}